<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <TextView
                android:text="Team A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="64dp" android:layout_marginStart="64dp"/>
        <TextView
                android:text="0"
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pointsA"
                app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintHorizontal_bias="0.571"/>
        <Button
                android:text="+3 Points"
                android:background="@android:color/holo_orange_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnPlusTigaA" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/pointsA" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="52dp" android:layout_marginStart="52dp"/>
        <Button
                android:text="+2 Points"
                android:background="@android:color/holo_orange_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnPlusDuaA" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnPlusTigaA"
                app:layout_constraintStart_toStartOf="@+id/btnPlusTigaA"
                app:layout_constraintEnd_toEndOf="@+id/btnPlusTigaA"/>
        <Button
                android:text="Free Throw"
                android:background="@android:color/holo_orange_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnFreeThrowA" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnPlusDuaA"
                app:layout_constraintStart_toStartOf="@+id/btnPlusDuaA"
                app:layout_constraintEnd_toEndOf="@+id/btnPlusDuaA"/>
        <Button
                android:text="Reset"
                android:background="@android:color/holo_orange_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnReset" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.499" android:layout_marginBottom="28dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="Team B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="72dp" android:layout_marginRight="72dp"/>
        <TextView
                android:text="0"
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pointsB"
                app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="@+id/textView4" app:layout_constraintHorizontal_bias="0.55"/>
        <Button
                android:text="+3 Points"
                android:background="@android:color/holo_orange_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnPlusTigaB" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/pointsB" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="52dp" android:layout_marginRight="52dp"/>
        <Button
                android:text="+2 Points"
                android:background="@android:color/holo_orange_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnPlusDuaB" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnPlusTigaB"
                app:layout_constraintEnd_toEndOf="@+id/btnPlusTigaB"
                app:layout_constraintStart_toStartOf="@+id/btnPlusTigaB"
        />
        <Button
                android:text="Free Throw"
                android:background="@android:color/holo_orange_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnFreeThrowB" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnPlusDuaB"
                app:layout_constraintEnd_toEndOf="@+id/btnPlusDuaB"
                app:layout_constraintStart_toStartOf="@+id/btnPlusDuaB"/>
        <View
                android:id="@+id/divider2"
                android:layout_width="1dp"
                android:layout_height="150dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>